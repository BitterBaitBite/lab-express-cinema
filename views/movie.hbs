<main id='details-body' class='container'>
	<div class='row justify-content-start'>

		<div class='col-12 col-lg-4'>
			<img src={{this.image}} alt='movie poster' />
		</div>

		<div class='col'>
			<a href='/movies'>Go back</a>

			<h2> {{this.title}} </h2>

			<h3> {{this.director}} </h3>

			<h3> Stars </h3>

			<ul>
				{{#each this.stars}}
					<li> {{this}} </li>
				{{/each}}
			</ul>

			<div>
				<p> {{this.description}} </p>
			</div>

			<p class='showtimes'>
				{{#each this.showtimes}}
					<span> {{this}} </span>
					|
				{{/each}}
			</p>
		</div>

	</div>
</main>